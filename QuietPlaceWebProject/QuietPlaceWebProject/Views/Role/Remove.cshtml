@model IRole

@{
    ViewBag.Title = "Удаление роли";
    Layout = "_Layout";
}

<div class="container">
    <div class="row">
        <div class="col">
            <h1>@ViewBag.Title</h1>
        </div>
    </div>
</div>

<br>
<div class="container">
    <div class="row">
        <div class="col">
            <h2>Вы точно хотите удалить роль @Model.Name?</h2>
            
            <br>
            <form asp-action="Remove" method="Post">
                <input type="hidden" name="roleId" asp-for="Id" />
                <input class="btn btn-dark" type="submit" value="Удалить"/>
                <a asp-action="Roles" class="btn btn-dark">Отмена</a>
            </form>
        </div>
    </div>
</div>