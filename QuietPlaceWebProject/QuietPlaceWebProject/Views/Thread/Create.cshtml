@model Thread

@{
    ViewBag.Title = "Создание треда";
    Layout = "_Layout";
}

<h1>@ViewBag.Title</h1>

<div class="container">
    <div class="row">
        <div class="col-md">
            <form asp-action="Create" method="Post" enctype="multipart/form-data">
                <input asp-for="BoardId" value="@ViewBag.BoardId" type="hidden" />
                <div class="form-group">
                    <label asp-for="Name" class="control-label"></label>
                    <input asp-for="Name" class="form-control"/>
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input name="textPost" type="text" height="100px" width="100px"/>
                    @* @if (ViewBag.TextPost is null) *@
                    @* { *@
                    @*     <input name="textPost" type="text" height="100px" width="100px"/> *@
                    @* } *@
                    @* else *@
                    @* { *@
                    @*     <input name="textPost" value="@ViewBag.TextPost" type="text" height="100px" width="100px"/> *@
                    @* } *@
                </div>
                <div class="form-group">
                    <input type="submit" value="Создать" class="btn btn-default"/>
                </div>
            </form>
        </div>
    </div>
</div>
